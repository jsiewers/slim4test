{
    "require": {
        "slim/slim": "4.*",
        "slim/psr7": "^1.3",
        "php-di/php-di": "^6.3",
        "selective/basepath": "^2.0",
        "respect/validation": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": { 
        "psr-4": {
        "App\\": "src/"
        }
    }, 
    "autoload-dev": {
    "psr-4": {
        "App\\Test\\": "tests/"
        } 
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml",
        "test:coverage": "phpunit --configuration phpunit.xml --coverage-clover build/logs/clover.xml"
    }
}
